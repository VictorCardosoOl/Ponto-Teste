{
  "version": 2,
  "builds": [
    {
      "src": "api/pontos.js",   // Caminho para seu arquivo da API
      "use": "@vercel/node"      // Usando o Vercel Node.js
    },
    {
      "src": "frontend/index.html", // Caminho para o seu HTML principal
      "use": "@vercel/static"      // Usando o Vercel Static para servir o frontend
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",        // Roteia as chamadas API
      "dest": "/api/pontos.js"
    },
    {
      "src": "/(.*)",            // Roteia todas as outras requisições para o frontend
      "dest": "frontend/index.html"
    }
  ]
}
